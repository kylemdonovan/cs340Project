<html>
<head>
    <title>List of Clients</title>

</head>
<body>
<table border="1" cellpadding="5">
        <tr>
            <th><a href="/clients">Clients</a></th>
            <th><a href="/foods">Foods</a></th>
            <th><a href="/inventories">Inventories</a></th>
            <th><a href="/regions">Regions</a></th>
            <th><a href="/sales_history">Sales History</a></th>
            <th><a href="/sales_history_has_food">Sales History Details</a></th>
        </tr>
    </table>

<h1>List of Clients</h1>
<table>
<table border = "1" cellpadding= "5">
    <thead>
        <tr>
            <th>Region ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.region_id }}</td>
                <td>{{ client.name }}</td>
                <td>{{ client.address }}</td>
                <td>{{ client.phone }}</td>
                <td>{{ client.email }}</td>
                <td>
                    <a href="/edit_client/{{ client.client_id }}" class="action-button">Edit</a>
                     <a href="/clients/delete/{{ client.client_id }}" class="delete-button">Delete</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<h2>Add Client</h2>
<form method="POST" action="/add_client" style="display: flex; flex-direction: row;">
    <div style="display: flex; flex-direction: row; align-items: center; margin-bottom: 10px;">
        <label for="region_id" style="margin-right: 10px;">Region ID:</label>
        <select name="region_id" id="region_id" required>
            {% for region in regions %}
                <option value="{{ region.region_id }}">{{ region.region_id }}</option>
            {% endfor %}
        </select>
    </div>
    <div style="display: flex; flex-direction: row; align-items: center; margin-bottom: 10px;">
        <label for="name" style="margin-right: 10px;">Name:</label>
        <input type="text" name="name" id="name" required>
    </div>
    <div style="display: flex; flex-direction: row; align-items: center; margin-bottom: 10px;">
        <label for="address" style="margin-right: 10px;">Address:</label>
        <input type="text" name="address" id="address" required>
    </div>
    <div style="display: flex; flex-direction: row; align-items: center; margin-bottom: 10px;">
        <label for="phone" style="margin-right: 10px;">Phone:</label>
        <input type="text" name="phone" id="phone" required>
    </div>
    <div style="display: flex; flex-direction: row; align-items: center; margin-bottom: 10px;">
        <label for="email" style="margin-right: 10px;">Email:</label>
        <input type="email" name="email" id="email" required>
    </div>
    <button type="submit">Add</button>
</form>

</body>
</html>
